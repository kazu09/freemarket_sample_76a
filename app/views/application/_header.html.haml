/*ヘッダー*/
/*２６行目new_post_pathからroot_pathへいったん変更*/
.header
  .header__inner
    .header__inner__main
      %h1.header__inner__main__icon
        =link_to image_tag("/assets/logo.png", width: "140")
      .header__inner__main__searchbox
        %form{"accept-charset" => "UTF-8", :action => "#", :method => "get"}
          %input#searchInput.searchbox--input{:name => "key", :placeholder => "キーワードから探す"}
          %button{:type => "submit"}
            .header__inner__main__searchbox__icon
              %img{:src => "/assets/icon-search 1.png", height: "17"}
    .header__inner__nav
      %ul.header__inner__nav__listleft
        %li.header__inner__nav__listleft__item.listleft__item--first
          = link_to "カテゴリー"
        %li.header__inner__nav__listleft__item
          = link_to "ブランド"
          %ul.brandsPulldown.displayNone
      %ul.header__inner__nav__listright
        - if user_signed_in?
          %li.header__inner__nav__listright__item.listright__item--login
            = link_to "ログアウト", destroy_user_session_path, method: :delete
          %li.header__inner__nav__listright__item.listright__item--new
            = link_to "新規登録", root_path 
        - else
          %li.header__inner__nav__listright__item.listright__item--login
            = link_to "ログイン", new_user_session_path
          %li.header__inner__nav__listright__item.listright__item--new
            = link_to "新規会員登録", new_user_registration_path