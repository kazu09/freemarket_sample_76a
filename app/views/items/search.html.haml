= render 'layouts/header'
.search
  .searchfield
  - @items.each do |item|
    .searchitem
      .searchitem__body
      - item.images.each_with_index do |image, index|
        - if index == 0
          = link_to image_tag("#{image.image.url}", width: '220', height: '200'), item_path(item.id), class: "searchitem__body__image"
        - unless item.buyer_id.blank?
          .sold-tag
            .sold-tag__title sold out
      .searchitem__body__lists
        %h3.searchitem__body__lists__detail-name
          = item.name
          %ul.searchitem__body__lists__detail-price
            %li.searchitem__body__lists__detail-price__itemprice
              =item.price
              円
            %li.searchitem__body__lists__detail-price__itemstar
              %i.fa.fa-star.likeIcon
              0
          %p.searchitem__body__lists__detail-tax (税込)

= render 'layouts/footer'