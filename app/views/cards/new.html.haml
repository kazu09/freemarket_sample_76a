.mypage-top
  %h1 マイページ
.mypage-main
  .mypage-main__left
    %nav.mypage-main__left__nav
      %h3.mypage-main__left__nav__head 詳細
      %ul.mypage-main__left__list
        %li
          %a.mypage-main__left__nav__list__item.active{:href => "#"}
            プロフィール
            %i.fas.fa-chevron-right
        %li
          %a.mypage-main__left__nav__list__item{:href => "#"}
            発送元・お届け先住所変更
            %i.fas.fa-chevron-right
        %li
          %a.mypage-main__left__nav__list__item{:href => "#"}
            支払い方法
            %i.fas.fa-chevron-right
        %li
          %a.mypage-main__left__nav__list__item{:href => "#"}
            メール/パスワード
            %i.fas.fa-chevron-right
        %li
          %a.mypage-main__left__nav__list__item{:href => "#"} 
            本人情報
            %i.fas.fa-chevron-right
        %li
          %a.mypage-main__left__nav__list__item{:href => "#"}
            電話番号の確認
            %i.fas.fa-chevron-right
        %li
          %a.mypage-main__left__nav__list__item{:href => "#"}
            ログアウト
            %i.fas.fa-chevron-right
  .mypage-main__right
    .mypage-main__right__title 
      %h1 ログアウト
    .mypage-main__right__main
      %button.mypage-main__right__main__logout{:type => "submit"} ログアウト
      -# %input{:name => "__csrf_value", :type => "hidden", :value => "#"}
    .mypage-main__right__title 
      %h1 クレジットカード新規登録
    .mypage-main__right__main__card
      = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
        .mypage-main__right__main__card__number
          %label.mypage-main__right__main__card__number__title カード番号
          .require 必須
        = text_field_tag "number", "", class: "mypage-main__right__main__card__number__form", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        %ul.mypage-main__right__main__card__number__list
          %li
            = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?238737266",width:"49px",height:"20px"
          %li
            = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?238737266",width:"34px",height:"20px"
          %li
            = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?238737266",width:"30px",height:"20px"
          %li
            = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?238737266",width:"32px",height:"20px"
          %li
            = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?238737266",width:"21px",height:"20px"
          %li
            = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?238737266",width:"32px",height:"20px"
          %li
            = image_tag "https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?238737266",width:"32px",height:"20px"
        %br
        .mypage-main__right__main__card__date
          .mypage-main__right__main__card__date__box
            %label.mypage-main__right__main__card__date__box__title 有効期限
            %select#exp_month{name: "exp_month", type: "text", class: "card-expired-date"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %span 月/
            %select#exp_year{name: "exp_year", type: "text", class: "card-expired-date"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            %span 年
          .require 必須
        %br
        .mypage-main__right__main__card__security
          %label.card-title セキュリティコード
          = text_field_tag "cvc", "", class: "mypage-main__right__main__card__security__cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
          .require 必須
        #card_token
        %br
        = submit_tag "追加する", id: "token_submit", class: "mypage-main__right__main__card_token-submit"